    def highlight_text(self, text: str, color: str = "#FFEB3B"):
        """é«˜äº®æ˜¾ç¤ºæ–‡æœ¬"""
        # ç®€åŒ–å®ç°ï¼Œå¯ä»¥ä½¿ç”¨æ›´å¤æ‚çš„é«˜äº®é€»è¾‘
        cursor = self.textCursor()
        format = cursor.charFormat()
        format.setBackground(QColor(color))

        # æŸ¥æ‰¾å¹¶é«˜äº®
